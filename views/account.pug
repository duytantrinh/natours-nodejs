extends base

mixin navItem(link, text, icon, active)
     li(class=`${active ? 'side-nav--active' : ''}`)
        a(href=`${link}`)
            svg
            use(xlink:href=`img/icons.svg#icon-${icon}`)
            | #{text}

block content 
    main.main
        .user-view
            nav.user-view__menu
                ul.side-nav
                    img.menu-icon(src='img/menu.png')
                    +navItem("#",'Settings','settings',true)
                    +navItem("/my-tours",'My bookings','briefcase',false)
                    


            .user-view__content
                .user-view__form-container
                    h2.heading-secondary.ma-bt-md Sorry, I need to lock this function. I can show you later
                    form.form.form-user-data
                        .form__group
                            label.form__label(for='name') Name
                            input#name.form__input(type='text', value=`${user.name}`, required, disabled)
                        .form__group.ma-bt-md
                            label.form__label(for='email') Email address
                            input#email_usersettings.form__input(type='email', value=`${user.email}`, required,  disabled)
                        .form__group.form__photo-upload
                            img.form__user-photo(src=`img/users/${user.photo}`, alt='User photo')
                            
                            input.form__upload(type='file', accept='image/*', id='photo', name='photo')
                            label(for='photo') Choose new phto
                        .form__group.right
                            //- button.btn.btn--small.btn--green Save settings
                .line &nbsp;
                .user-view__form-container
                    h2.heading-secondary.ma-bt-md Password change
                    form.form.form-user-settings
                        .form__group
                            label.form__label(for='password-current') Current password
                            input#password-current.form__input(type='password', placeholder='••••••••', required, minlength='8', disabled)
                        .form__group
                            label.form__label(for='password') New password
                            input#password.form__input(type='password', placeholder='••••••••', required, minlength='8', disabled)
                        .form__group.ma-bt-lg
                            label.form__label(for='password-confirm') Confirm password
                            input#password-confirm.form__input(type='password', placeholder='••••••••', required, minlength='8', disabled)
                        .form__group.right
                            //- button.btn.btn--small.btn--green#btn-save__password Save password

